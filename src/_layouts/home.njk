<!-- layouts/home.njk -->
{% extends "base.njk" %}

{% block pageStyles %}
<link rel="stylesheet" href="/css/components/post-grid.css">
{% endblock %}

{% block content %}
<div class="post-grid">
    {% for post in collections.posts | reverse | limit(6) %}
        <article class="post-card">
            <h2>{{ post.data.title }}</h2>
            <div class="post-date">{{ post.date | dateFilter }}</div>
            <p class="post-excerpt">{{ post.data.excerpt }}</p>
            <a href="{{ post.url }}" class="read-more">Read More</a>
        </article>
    {% endfor %}
</div>
{% endblock %}
