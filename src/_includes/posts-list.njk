<section class="posts">
  {%- for post in collections.all | sort(false, false, 'data.modified') | reverse -%}
    {% if post.url != '/' and post.data.type != 'page'%}
    <article class="post-preview">
      <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
      <div class="post-metadata">
        {% if post.data.modified %}
        <span class="modified">Last modified: {{ post.data.modified | dateDisplay }}</span>
        {% endif %}
      </div>
    </article>
    {% endif %}
  {%- endfor -%}
</section>
