{% extends "layouts/base.njk" %}

{% block content %}
<article class="post">
    <header class="post-header">
        <h1>{{ title }}</h1>
        {% if date %}
        <time datetime="{{ date | dateIso }}">{{ date | dateReadable }}</time>
        {% endif %}
        
        {% if tags %}
        <div class="tags">
            {% for tag in tags %}
                {% if tag != "post" %}
                <a href="/tags/{{ tag }}" class="tag">{{ tag }}</a>
                {% endif %}
            {% endfor %}
        </div>
        {% endif %}
    </header>

    <div class="post-content">
        {{ content | safe }}
    </div>
</article>
{% endblock %}
